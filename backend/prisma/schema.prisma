model CampaignRecipient {
  id          String    @id @default(uuid())
  campaignId  String    @map("campaign_id")
  customerId  String    @map("customer_id")
  phone       String?
  email       String?
  status      String    @default("pending")
  error       String?
  sentAt      DateTime? @map("sent_at")
  clickedAt   DateTime? @map("clicked_at")
  clickCount  Int       @default(0) @map("click_count")
  createdAt   DateTime  @default(now()) @map("created_at")
  campaign    Campaign  @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  customer    Customer  @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@map("campaign_recipients")
}

model Payment {
  id               String   @id @default(uuid())
  customerId       String?  @map("customer_id")
  customerName     String   @map("customer_name")
  customerEmail    String?  @map("customer_email")
  customerPhone    String?  @map("customer_phone")
  description      String
  amount           Float
  currency         String   @default("ILS")
  wooOrderId       Int?     @unique @map("woo_order_id")
  wooOrderKey      String?  @map("woo_order_key")
  status           String   @default("pending")    // pending | paid | cancelled | refunded
  invoiceUrl       String?  @map("invoice_url")    // Morning/GreenInvoice document URL
  invoiceNumber    String?  @map("invoice_number")
  paymentMethod    String?  @map("payment_method")  // creditcard | bit | google-pay
  paidAt           DateTime? @map("paid_at")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  customer Customer? @relation(fields: [customerId], references: [id], onDelete: SetNull)

  @@map("payments")
}
